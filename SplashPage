import java.util.Scanner;

public class SplashPage {

	public static void main(String[] args) {



		

		//Initial Login Page 
		
		System.out.println("***Welcome to KLR's Restaurant Management Software***");
		System.out.println();
		System.out.println("Press M for Manager | Press E for Employee");
		
		Scanner sc = new Scanner(System.in);
		char p = sc.next().charAt(0);
		
		

		
				
		//Checks for manager
					

				
		if(p == 'M') {
				//prompt manager gets (Everything an employee gets, plus hire, fire, and restock)
				System.out.println("Hello "  + "!");
				System.out.println("To create an order, press (1),");
				System.out.println("To restock an item, press (2),");
				System.out.println("Next Menu (3)");
				Scanner scn = new Scanner(System.in);
				char num = sc.next().charAt(0);
				
				if(num == '1') {
					//Create order code
					System.out.print("order");
					
				}
				else if (num == '2') {
					//Restock code
					System.out.print("Restock");

					
				}
				else if (num== '3') {
					Scanner hf = new Scanner(System.in);

					System.out.println("To hire a new Employee, press (1),");
					System.out.println("To fire an Employee, press (2)");
					System.out.print("To View Employee Database, Press (3)");

					char hfn = sc.next().charAt(0);
					
					if(hfn == '1') {
						//Add employee
						System.out.print("hire");

					}
					else if(hfn == '2') {
						//remove employee
						System.out.print("fire");

					}
					else if(hfn =='3') {
						//Print database
						System.out.print("print");

					}
				}
				

			}
			
		
		else if (p == 'E') {
			//what the employees see (prompt for taking orders)
			System.out.println("Welcome Valued Employee");
			System.out.println("Please Enter Order Below:");
			
			//Code for Ordering

		}
		
	}
}


